---
import { url } from '../lib/url';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={url('/favicon.svg')} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Ubiquitongue</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="A bidirectional index mapping mathematical and computer science notations to their meanings, reducing ambiguity in academic notation." />
    <meta name="keywords" content="mathematical notation, computer science, symbols, semantics, syntax, academic, research" />
    <meta name="author" content="Ubiquitongue Contributors" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${Astro.site}${Astro.url.pathname}`} />
    <meta property="og:title" content={`${title} - Ubiquitongue`} />
    <meta property="og:description" content="A bidirectional index mapping mathematical and computer science notations to their meanings." />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={`${Astro.site}${Astro.url.pathname}`} />
    <meta property="twitter:title" content={`${title} - Ubiquitongue`} />
    <meta property="twitter:description" content="A bidirectional index mapping mathematical and computer science notations to their meanings." />
  </head>
  <body class="min-h-screen bg-gray-50">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href={url('/')} class="text-xl font-semibold text-gray-900">
              Ubiquitongue
            </a>
            <div class="ml-10 flex items-baseline space-x-4">
              <a href={url('/notations')} class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                Notations
              </a>
              <a href={url('/papers')} class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                Papers
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
  </body>
</html>